{
    "name": "@need4swede/heimdall-sso",
    "version": "1.0.0",
    "description": "Portable Single Sign-On authentication package for React/Node applications",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./server": {
            "import": "./dist/server/index.js",
            "require": "./dist/server/index.cjs",
            "types": "./dist/server/index.d.ts"
        },
        "./client": {
            "import": "./dist/client/index.js",
            "require": "./dist/client/index.cjs",
            "types": "./dist/client/index.d.ts"
        },
        "./database": {
            "import": "./dist/database/index.js",
            "require": "./dist/database/index.cjs",
            "types": "./dist/database/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest",
        "lint": "eslint src",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "sso",
        "authentication",
        "oauth",
        "microsoft",
        "react",
        "node",
        "express",
        "jwt",
        "heimdall"
    ],
    "author": "@need4swede",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/need4swede/heimdall-sso.git"
    },
    "peerDependencies": {
        "express": "^4.18.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "dependencies": {
        "jsonwebtoken": "^9.0.2",
        "nanoid": "^5.0.0",
        "pg": "^8.8.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.0.0",
        "@types/pg": "^8.6.6",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "eslint": "^8.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vitest": "^1.0.0"
    }
}